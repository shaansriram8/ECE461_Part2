{
  "family": "ece461-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "fastapi-app",
      "image": "<ACCOUNT_ID>.dkr.ecr.us-east-2.amazonaws.com/ece461-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "LOG_LEVEL",
          "value": "1"
        },
        {
          "name": "LOG_FILE",
          "value": "/tmp/error_logs.log"
        },
        {
          "name": "DDB_TABLE_NAME",
          "value": "artifacts_metadata"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-2"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ece461-backend-task",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}

